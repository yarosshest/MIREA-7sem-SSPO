% ----------------------------------------------------------------------------
% SECTION SETTINGS
% ----------------------------------------------------------------------------

\usepackage{titlesec}

% section size
\titleformat{\section}[block]
  {\bfseries\fontsize{18pt}{20pt}\selectfont} % Bold, size 18pt
  {\thesection}{1em}{} % numbering, indentation and uppercase 
\titleformat{\subsection}[block]
	{\fontsize{16pt}{20pt}\bfseries}{\thesubsection}{1em}{}
\titleformat{\subsubsection}[block]
	{\fontsize{14pt}{18pt}\bfseries}{\thesubsubsection}{1em}{}
\titleformat{\paragraph}[block]
	{\fontsize{14pt}{18pt}\bfseries}{}{1em}{}

\titlespacing*{\section}{\parindent}{0pt}{0pt}
\titlespacing*{\subsection}{\parindent}{0pt}{0pt}
\titlespacing*{\subsubsection}{\parindent}{0pt}{0pt}
\titlespacing*{\paragraph}{\parindent}{0pt}{0pt}

